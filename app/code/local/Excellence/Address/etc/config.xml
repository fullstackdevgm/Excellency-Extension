<?xml version="1.0"?>
<config>
    <modules>
        <Excellence_Address>
            <version>0.1.0</version>
        </Excellence_Address>
    </modules>
    <frontend>
        <layout>
            <updates>
                <address>
                    <file>address.xml</file>
                </address>
            </updates>
        </layout>
    </frontend>
    <global>
        <models>
            <address>
                <class>Excellence_Address_Model</class>
                <resourceModel>address_mysql4</resourceModel>
            </address>
            <address_mysql4>
                <class>Excellence_Address_Model_Mysql4</class>
                <entities>
                    <address>
                        <table>address</table>
                    </address>
                </entities>
            </address_mysql4>
        </models>
        <resources>
            <address_setup>
                <setup>
                    <module>Excellence_Address</module>
                    <class>Mage_Customer_Model_Entity_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </address_setup>
            <address_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </address_write>
            <address_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </address_read>
        </resources>
        <blocks>
            <address>
                <class>Excellence_Address_Block</class>
            </address>
        </blocks>
        <helpers>
            <address>
                <class>Excellence_Address_Helper</class>
            </address>
        </helpers>
        <fieldsets>
            <sales_convert_quote_address>
                <house_number>
                    <to_order_address>*</to_order_address>
                    <to_customer_address>*</to_customer_address>
                </house_number>
                <po_box>
                    <to_order_address>*</to_order_address>
                    <to_customer_address>*</to_customer_address>
                </po_box>
            </sales_convert_quote_address>
            <customer_address>
                <house_number>
                    <to_quote_address>*</to_quote_address>
                </house_number>
                <po_box>
                    <to_quote_address>*</to_quote_address>
                </po_box>
            </customer_address>
        </fieldsets>
    </global>
</config>